{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "watch": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/basicSyntax/*"
  ]
}